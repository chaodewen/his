<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="zju.ccnt.mdsp.mapping.Recipe" table="Recipe" schema="mdsp">
        <id name="id">
            <column name="id" sql-type="int(11)"/>
        </id>
        <property name="rdate">
            <column name="rdate" sql-type="date" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="gender">
            <column name="gender" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="age">
            <column name="age" sql-type="int(11)" not-null="true"/>
        </property>
        <property name="recordId">
            <column name="recordId" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="diagnosis">
            <column name="diagnosis" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="doctor">
            <column name="doctor" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <property name="charge">
            <column name="charge" sql-type="float(6,2)" precision="6" scale="2" not-null="true"/>
        </property>
        <property name="checker">
            <column name="checker" sql-type="varchar(40)" length="40" not-null="true"/>
        </property>
        <set name="drugItemsById" inverse="true">
            <key>
                <column name="recipeId" not-null="true"/>
            </key>
            <one-to-many not-found="ignore" class="zju.ccnt.mdsp.mapping.DrugItem"/>
        </set>
    </class>
</hibernate-mapping>